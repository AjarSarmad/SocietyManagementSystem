<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FAST Management System</title>

    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
    <script src="https://kit.fontawesome.com/4a7136ed7d.js" crossorigin="anonymous"></script>
    <link href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet'>

</head>
<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="#">
                <img src="~/util/images/Logo.png" , height="70px">
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="#">Admissions</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="#">Study</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/Events">News & Events</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Societies
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                @Html.ActionLink("DECS", "Index", "About", new { id = "Daramatics & Extra Curricular Society" }, new { @class = "dropdown-item" })
                            </li>
                            <li>
                                @Html.ActionLink("SPORTICS", "Index", "About", new { id = "FAST SPORTICS" }, new { @class = "dropdown-item" })
                            </li>
                            <li>
                                @Html.ActionLink("FDSS", "Index", "About", new { id = "FAST Data Science Society" }, new { @class = "dropdown-item" })
                            </li>
                            <li>
                                @Html.ActionLink("ACM-W", "Index", "About", new { id = "ACM WOMEN CHAPTER NUCES" }, new { @class = "dropdown-item" })
                            </li>
                            <li>
                                @Html.ActionLink("ACM", "Index", "About", new { id = "ACM STUDENT CHAPTER" }, new { @class = "dropdown-item" })
                            </li>
                            <li>
                                @Html.ActionLink("CBS", "Index", "About", new { id = "Character Building Society" }, new { @class = "dropdown-item" })
                            </li>

                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">About Us</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!--NAVBAR-->

    @RenderBody()
    <footer id="footer">
        <i class="footer-icon fab fa-twitter"></i>
        <i class="footer-icon fab fa-facebook-f"></i>
        <i class="footer-icon fab fa-instagram"></i>
        <i class="footer-icon fas fa-envelope"></i>
        <p>&copy; Copyright @DateTime.Now.Year FAST Society Management</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap.css")
    @RenderSection("scripts", required: false)
</body>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>

</html>
